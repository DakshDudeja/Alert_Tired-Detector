
 1 .Print the following pattern on the screen
****
 ** 
  *  
 ** 
****

#include<iostream>
using namespace std;
int main()
{
cout<<"****"<<endl;
cout<<"**"<<endl;
cout<<"*"<<endl;
cout<<"**"<<endl;
cout<<"****"<<endl;
return 0;
}

